<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:paddingLeft="7dp"
        android:text="WebService URL" />
    
    <EditText 
        android:id="@+id/editext_config_webservice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_marginLeft="7dp"
        android:paddingLeft="7dp"
        android:text="WebService"/>
    
    <Button 
        android:id="@+id/button_config_webservice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:paddingLeft="7dp"
        android:text="Save WeService Url"/>
    
     <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="7dp"
        android:paddingLeft="7dp"
        android:text="SignalR URL" />
    
    <EditText 
        android:id="@+id/editext_config_signalr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_marginLeft="7dp"
        android:paddingLeft="7dp"
        android:text="SignalR"/>
    
    <Button 
        android:id="@+id/button_config_signalr"
        android:layout_width="wrap_content"        
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:paddingLeft="7dp"
        android:text="Save WeService Url"/>

</LinearLayout>