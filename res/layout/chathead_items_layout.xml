<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
    
	<ImageView 
	    android:id="@+id/imageview_chathead_image"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_weight="0"
	    android:layout_gravity="center"
	    android:src="@drawable/chathead_user_green"/>
	<TextView 
	    android:id="@+id/textview_chathead_text"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_weight="1"
	    android:paddingLeft="10dp"
	    android:paddingRight="20dp"
	    android:layout_gravity="center"
	    android:gravity="center_vertical"
	    android:textSize="18dp"
	    android:textStyle="bold"
	    android:background="@color/chathead_textview"
	    android:textColor="#ffffff"
	    android:hint="text"
	    android:textColorHint="#ffffff"/>
	
	<ImageView 
	    android:id="@+id/imageview_chathead_close"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_weight="0"
	    android:layout_gravity="center"
	    android:src="@drawable/chathead_image_close"/>
</LinearLayout>